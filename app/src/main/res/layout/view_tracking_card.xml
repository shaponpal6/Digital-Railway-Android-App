<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="2dp"
    card_view:cardBackgroundColor="#eff"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="true"
    card_view:contentPadding="5dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout"
        style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
        android:padding="6dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Name"
            android:id="@+id/user_name"
            android:textSize="12dp"
            android:paddingLeft="10dp"
            android:textColor="#ccc"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/card" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/card"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="TR Name"
                android:id="@+id/trainName"
                android:paddingLeft="10dp"
                android:textSize="16dp"
                android:paddingTop="14dp"
                android:textColor="#df9090"
                android:layout_toRightOf="@+id/card"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="From: "
                android:id="@+id/aro_right"
                android:paddingLeft="10dp"
                android:textSize="16dp"
                android:paddingTop="14dp"
                android:textColor="#ccc"
                android:layout_toRightOf="@+id/card"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="TR Name"
                android:id="@+id/group_name"
                android:paddingLeft="10dp"
                android:textSize="16dp"
                android:paddingTop="14dp"
                android:textColor="#df9090"
                android:layout_toRightOf="@+id/card"
                />

        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Online Tracking"
            android:id="@+id/online"
            android:paddingLeft="10dp"
            android:textSize="14dp"
            android:paddingTop="40dp"
            android:textColor="#d725c8"
            android:layout_toRightOf="@+id/card"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Buy Ticket"
            android:id="@+id/ticket_price"
            android:paddingLeft="20dp"
            android:textSize="14dp"
            android:layout_toEndOf="@+id/online"
            android:paddingTop="40dp"
            android:textColor="#4cda28"
            android:layout_toRightOf="@+id/card"
            />

        <Button
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="Track"
            android:onClick="getTagValue"
            style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
            android:textSize="10dp"
            android:background="#f0f0f0"
            android:tag="364645"
            android:id="@+id/track"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>